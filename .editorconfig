root = true

# Keep Visual Studio/Roslyn mostly out of the way; CSharpier handles formatting.
[*.cs]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 4

# Reduce formatter conflicts (Roslyn formatting is largely ignored by CSharpier anyway)
csharp_new_line_before_open_brace = all
